<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg_color"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/russia" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ivAvatar"
                android:text="@string/_12_nov_2022"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:contentDescription="@string/item_avatar_image"
                android:scaleType="centerCrop"
                android:src="@drawable/lions" />

            <RelativeLayout
                android:id="@+id/rlAcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCover"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvCompteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="10dp"
                    android:text="@string/mon_compte"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_action_account" />

                <TextView
                    android:id="@+id/tvCompteName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCompteTitle"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/user_name"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tvComptePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCompteName"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/telephone"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlKeywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlAcount"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:padding="20dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:text="@string/taches_key_words"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_action_key" />

                <TextView
                    android:id="@+id/tvKeyList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/swKey"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="10dp"
                    android:text="@string/liste_des_mots_cle"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:drawableStartCompat="@drawable/ic_action_key_list" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvAutorisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlKeywords"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/autorisations"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_auth" />

            <TextView
                android:id="@+id/tvNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAutorisation"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/notifications"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_notification" />

            <TextView
                android:id="@+id/tvDisplayMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNotification"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/display_mode"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_jour" />

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDisplayMode"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:padding="20dp"
                android:text="@string/language"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_action_language" />

            <TextView
                android:id="@+id/tvConfidentialite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLanguage"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/confidentialit_et_securit"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_key_security" />

            <TextView
                android:id="@+id/tvDataStockage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvConfidentialite"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/donn_es_et_stockage"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_stockage" />

            <TextView
                android:id="@+id/tvGroupe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDataStockage"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/groupe"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_groupe" />

            <TextView
                android:id="@+id/tvFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDataStockage"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/faq"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_faq" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFaq"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/a_propos"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_about" />

            <TextView
                android:id="@+id/tvSignOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAbout"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="@string/sign_out"
                android:textColor="@color/red"
                android:textSize="17sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_action_signout" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>